<body>

    <div id="main-content">
        <div class="gif-container">
            <img id="mainGif" src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExOHYyNm50Zmd4ZW5ueWd4eGZ4ZW5ueWd4ZW5ueWd4ZW5ueWd4ZW5ueSZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9cw/cLS1cfxvGOPVpf9g3y/giphy.gif" alt="Puppy Eyes">
        </div>
        <h1 id="questionText">Will you be my Valentine?</h1>
        <div class="buttons">
            <button id="yesBtn" onclick="celebrate()">Yes</button>
            <button id="noBtn" onmouseover="moveButton()">No</button>
        </div>
    </div>

    <script>
        function moveButton() {
            const noBtn = document.getElementById('noBtn');
            
            // Calculate random positions within the visible window
            // Subtracting 100 to keep the button from going off-screen
            const x = Math.random() * (window.innerWidth - 100);
            const y = Math.random() * (window.innerHeight - 50);

            noBtn.style.left = x + 'px';
            noBtn.style.top = y + 'px';
        }

        function celebrate() {
            const gif = document.getElementById('mainGif');
            const text = document.getElementById('questionText');
            const buttons = document.querySelector('.buttons');

            // Update Content
            text.innerHTML = "Yay! Best Valentine ever! ❤️";
            gif.src = "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNmYyY3F6NHR6dzF6dzF6dzF6dzF6dzF6dzF6dzF6dzF6dzF6dzF6JmVwPXYxX2ludGVybmFsX2dpZl9ieV9pZCZjdD1n/l41lI4bYippJV8bXG/giphy.gif"; // Celebration GIF
            
            // Hide the buttons
            buttons.style.display = 'none';
        }
    </script>
</body>
